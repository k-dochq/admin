          </div>
          <div>
            <Label htmlFor='email'>Email</Label>
            <Input
              id='email'
              name='email'
              type='email'
              value={formData.email}
              onChange={handleInputChange}
            />
          </div>
          <Button type='submit'>Submit</Button>
        </form>
      </CardContent>
    </Card>
  );
